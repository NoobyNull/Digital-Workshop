{
    "target_path": ".",
    "output_dir": "reports",
    "tools": {
        "monolithic_detector": {
            "enabled": true,
            "threshold": 500,
            "workers": 4,
            "timeout": 300,
            "exclude_dirs": ["__pycache__", ".git", "node_modules", ".venv", "venv"],
            "file_extensions": [".py"],
            "include_subdirectories": true
        },
        "naming_validator": {
            "enabled": true,
            "workers": 4,
            "min_compliance": 95.0,
            "timeout": 300,
            "check_case": true,
            "check_underscores": true,
            "exclude_patterns": ["test_", "Test", "conftest.py", "setup.py"]
        },
        "unified_test_runner": {
            "enabled": true,
            "parallel_suites": true,
            "max_workers": 4,
            "timeout": 1800,
            "test_patterns": ["test_*.py", "*_test.py"],
            "coverage_threshold": 80.0,
            "fail_fast": false
        },
        "code_quality_validator": {
            "enabled": true,
            "parallel_execution": true,
            "timeout": 600,
            "black_format": true,
            "pylint_check": true,
            "max_line_length": 88,
            "ignore_patterns": ["__pycache__/*", ".git/*"]
        },
        "quality_gate_enforcer": {
            "enabled": true,
            "parallel": true,
            "timeout": 300,
            "enforce_monolithic_gates": true,
            "enforce_naming_gates": true,
            "enforce_test_gates": true,
            "enforce_quality_gates": true
        }
    },
    "reporting": {
        "formats": ["json", "html", "console"],
        "include_charts": true,
        "include_recommendations": true,
        "include_performance_metrics": true,
        "output_detailed_reports": true,
        "export_summary_only": false
    },
    "performance": {
        "max_total_time": 900,
        "memory_limit_mb": 2048,
        "parallel_execution": true,
        "max_concurrent_tools": 5,
        "progress_update_interval": 1.0,
        "enable_memory_monitoring": true,
        "enable_cpu_monitoring": true
    },
    "quality_gates": {
        "monolithic_modules": {
            "threshold": 0,
            "severity": "critical",
            "enforce": true,
            "description": "No monolithic modules allowed"
        },
        "naming_conventions": {
            "threshold": 95.0,
            "severity": "major",
            "enforce": true,
            "description": "95% compliance with naming conventions"
        },
        "test_execution": {
            "threshold": 95.0,
            "severity": "critical",
            "enforce": true,
            "description": "95% test pass rate"
        },
        "code_quality": {
            "threshold": 90.0,
            "severity": "major",
            "enforce": true,
            "description": "90% code quality score"
        },
        "performance_score": {
            "threshold": 80.0,
            "severity": "minor",
            "enforce": false,
            "description": "80% performance score threshold"
        }
    },
    "logging": {
        "level": "INFO",
        "enable_file_logging": true,
        "log_file_path": "logs/test_framework.log",
        "max_log_size_mb": 10,
        "backup_count": 5,
        "enable_console_logging": true
    },
    "profiles": {
        "development": {
            "tools.monolithic_detector.threshold": 1000,
            "tools.naming_validator.min_compliance": 90.0,
            "performance.max_total_time": 1800
        },
        "staging": {
            "tools.monolithic_detector.threshold": 750,
            "tools.naming_validator.min_compliance": 92.5,
            "performance.max_total_time": 1200
        },
        "production": {
            "tools.monolithic_detector.threshold": 500,
            "tools.naming_validator.min_compliance": 95.0,
            "performance.max_total_time": 900
        }
    },
    "ci_cd": {
        "enabled": false,
        "fail_on_critical": true,
        "fail_on_major": true,
        "fail_on_minor": false,
        "output_junit": false,
        "junit_output_path": "reports/junit_results.xml",
        "output_sarif": false,
        "sarif_output_path": "reports/sarif_results.sarif"
    },
    "notifications": {
        "email": {
            "enabled": false,
            "smtp_server": "",
            "smtp_port": 587,
            "username": "",
            "password": "",
            "recipients": []
        },
        "slack": {
            "enabled": false,
            "webhook_url": "",
            "channel": "",
            "username": "Test Framework"
        }
    },
    "advanced": {
        "cache_results": true,
        "cache_ttl_seconds": 3600,
        "parallel_tool_execution": true,
        "smart_retry": true,
        "max_retry_attempts": 3,
        "enable_detailed_timing": true,
        "save_intermediate_results": true,
        "cleanup_temp_files": true
    }
}